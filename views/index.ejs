<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Star Wars Quote App</title>
    <link rel="stylesheet" href="/styles.css">
  </head>

  <body>
    <h1 class="top">May Node and Express be with you.</h1>

<div class="wrapper">

    <div class="left">

    <h2 class="centeredMain">Add quote</h2>    
    <form class="centered" action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
    </form>
</div>

  



<div class="middle">
    <h2 class="centeredMain">Darth Vadar invades!</h2>
    <p class="centered">
      Replace first Yoda's quote with a quote written by Darth Vadar
    </p>
    <button id="update-button">Replace Yoda's quote</button>
  </div>

  <div class="right">
    <h2 class="centeredMain">Remove Darth Vadar!</h2>
    <p class="centered">
      Delete one Darth Vadar's quote. Does nothing if there are no more Darth
      Vadar's quote
    </p>
    <button id="delete-button">Delete Darth Vadar's quote</button>
  </div>
</div>

  <div class="quotesWrap">
  
  <h2> Quotes </h2>

  <ul class="quotes">
    <!-- Loop through quotes -->
    <% for(var i = 0; i < quotes.length; i++) {%>
      <li class="quote">
        <!-- Output name from the iterated quote object -->
        <span><%= quotes[i].name %></span>:
        <!-- Output quote from the iterated quote object -->
        <span><%= quotes[i].quote %></span>
      </li>
    <% } %>
  </ul>

</div>
  
  <div id="message"></div>

    


   <script src="/main.js"></script> 
  </body>
</html>